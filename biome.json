{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "linter": {
    "includes": [
      "**",
      "!**/@*",
      "!**/.*/**",
      "!**/old_*/**",
      "!**/_*/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/test/**",
      "!**/public/**",
      "!apps/docs/**",
      "!**/website/**",
      "!apps/upload-api/**",
      "!apps/www/**",
      "!packages/___/**",
      "!packages/_oldstuff_refactor/**",
      "!packages/duck-state/**",
      "!packages/duck-benchmark/**",
      "!packages/registry-build-duckui/**",
      "!**/duck-state/**",
      "!packages/duck-ui/**",
      "!packages/sandbox-server/**",
      "!packages/benchmark/**",
      "!**/upload/**",
      "!**/table/**",
      "!**/combobox.tsx"
    ],
    "enabled": true,
    "rules": {
      "recommended": false,
      "complexity": {
        "noForEach": "error",
        "noStaticOnlyClass": "error",
        "noUselessSwitchCase": "error",
        "useFlatMap": "error",
        "useWhile": "error"
      },
      "style": {
        "noNegationElse": "error",
        "useNodejsImportProtocol": "error",
        "useNumberNamespace": "error",
        "useConst": "error",
        "noNonNullAssertion": "off",
        "useDefaultSwitchClause": "error"
      },
      "suspicious": {
        "noDoubleEquals": "error",
        "noThenProperty": "error",
        "useIsArray": "error",
        "useGetterReturn": "error",
        "noVar": "error"
      },
      "nursery": {
        "useSortedClasses": "info"
      }
    }
  },
  "formatter": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/website/**",
      "!**/build/**",
      "!**/public/**",
      "!**/.*/**",
      "!**/old_*/**",
      "!**/_*/**",
      "!packages/___/",
      "!packages/_oldstuff_refactor/",
      "!packages/benchmark/",
      "!packages/duck-orm-skitch/**"
    ],
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "multiline",
    "bracketSpacing": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "globals": ["Global1"],
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": true,
      "quoteStyle": "single",
      "attributePosition": "auto"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.json"],
      "formatter": {
        "indentWidth": 2
      }
    }
  ]
}
