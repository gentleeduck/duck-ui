{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@gentleduck/vim",
  "version": "0.1.7",
  "description": "A package for creating variants of components, providing a simple and efficient way to create variants of components.",
  "license": "MIT",
  "private": false,
  "type": "module",
  "files": [
    "src",
    "!src/**/*.test.*",
    "!src/**/__test__/**",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "SECURITY.md",
    "article-about-this.md",
    "tsconfig.json"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*/index.ts"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "wildduck",
  "repository": {
    "type": "git",
    "url": "https://github.com/gentleeduck/ui",
    "directory": "packages/duck-vim"
  },
  "bugs": {
    "url": "https://github.com/gentleeduck/ui/issues"
  },
  "homepage": "https://github.com/gentleeduck/ui/tree/master/packages/duck-vim#readme",
  "scripts": {
    "ci": "pnpm run lint && pnpm run format",
    "clean": "rimraf dist .cache .turbo node_modules .next .velite",
    "clean:git": "git clean -xdf .cache .turbo node_modules dist",
    "dev": "vitest",
    "format": "biome format --write ./",
    "lint": "biome lint --write ./",
    "publish": "pnpm run ci && changeset publish",
    "release": "changeset version",
    "test": "vitest run"
  },
  "peerDependencies": {
    "react": ">=18 || 19",
    "react-dom": ">=18 || 19"
  },
  "devDependencies": {
    "@gentleduck/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "catalog:",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "clsx": "^1.2.1",
    "jsdom": "^20.0.3",
    "rimraf": "^4.4.1",
    "tailwind-merge": "^1.14.0",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "zod": "catalog:"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.10.0"
}
