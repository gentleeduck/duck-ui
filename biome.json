{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "linter": {
    "includes": [
      "**",
      "!**/@*",
      "!**/.*/**",
      "!**/old_*/**",
      "!**/_*/**",
      "./apps/docs/__ui_registry__/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/test/**",
      "!**/public/**",
      "!apps/docs/**",
      "!**/website/**",
      "!apps/upload-api/**",
      "!apps/www/**",
      "!packages/___/**",
      "!packages/_oldstuff_refactor/**",
      "!packages/duck-state/**",
      "!packages/duck-benchmark/**",
      "!packages/registry-build-duckui/**",
      "!**/duck-state/**",
      "!packages/duck-ui/**",
      "!packages/sandbox-server/**",
      "!apps/benchmark/**",
      "!**/upload/**",
      "!**/table/**",
      "!**/combobox.tsx"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {},
      "style": {},
      "suspicious": {
        "noDoubleEquals": "error",
        "noThenProperty": "error",
        "useIsArray": "error",
        "useGetterReturn": "error",
        "noVar": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "info",
          "options": {
            "attributes": ["className", "class"],
            "functions": ["clsx", "cva", "tw", "twMerge", "cn", "twJoin", "tv"]
          }
        }
      }
    }
  },
  "formatter": {
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/website/**",
      "!**/build/**",
      "!**/public/**",
      "!**/.*/**",
      "!**/old_*/**",
      "!**/_*/**",
      "!packages/___/",
      "./apps/docs/__ui_registry__/**",
      "!packages/_oldstuff_refactor/",
      "!packages/benchmark/",
      "!packages/duck-orm-skitch/**"
    ],
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "multiline",
    "bracketSpacing": true
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "globals": ["Global1"],
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": true,
      "quoteStyle": "single",
      "attributePosition": "auto"
    }
  },
  "overrides": [
    {
      "includes": ["**/*.json"],
      "formatter": {
        "indentWidth": 2
      }
    }
  ]
}
